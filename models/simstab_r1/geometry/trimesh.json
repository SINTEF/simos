{	
	"name": "trimesh",
	"type": "trimesh",
	"description": "class describing a surface mesh with triangular panels",
	
	"extends": ["marmo:basic:NamedEntity"],
	
	"properties": [
			
	{"name": "normals", 
			"type": "double",
			"dim": "*,*", 
			"description": "normal to each panel. (3,NPanels)"
			},

	{"name": "vertices", 
			"type": "double",
			"dim": "*,*",
			"description": "Vertices of the mesh. (3,3*NPanels)"
			},
			
	
	{"name": "NPanels", 
			"type": "integer",
			"description": "Total number of panels in the mesh."
			},
			
	{"name": "Lmin", 
			"type": "double",
			"description": "Shortest length between 2 vertices."
			},
			
	{"name": "Lmax", 
			"type": "double",
			"description": "Largest length between 2 vertices."
			},
			
     {"name": "min_angle", 
			"type": "double",
			"description": "Smallest angle in the mesh."
			}
				 
	]
	
}