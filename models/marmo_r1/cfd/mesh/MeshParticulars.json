
{	
	"name": "MeshParticulars",
	"type": "MeshParticulars",
	"description": "CFD mesh particulars.",
	
	"extends": ["marmo:basic:NamedEntityWithUnit"],
	
	"properties": [
			
	{"name": "id", 
			"type": "string", "value": "mesh",
			"description": "mesh id"},

	{"name": "resolutionID", 
			"type": "string", "value": "fine",
			"description": "mesh resolution id"},

	{"name": "dimension", 
			"type": "integer", "value": 3, 
			"from": [2,3],
			"description": "2 or 3 d mesh."},

    {"name": "meshPlane", 
            "type": "marmo:containers:SimpleString",
            "optional":"true", 
            "value": "x,y", 
            "description": "the plain in which the 2D mesh is defined."},
            
	{"name": "nCells", 
			"type": "integer", "value": "1",
			"description": "number of mesh cells."},
			
	{"name": "faces", 
			"type": "Surface", 
			"dim": "*" ,
			"__dependencies": { "unit": "unit" },
			"description": "mesh faces."},
			
	{"name": "mergePatchesCmds", 
			"type": "MergePatch", 
			"dim": "*" ,
			"description": "path merging commands."},
			
	{"name": "faceting", 
			"type": "Faceting", 
			"description": "faceting settings"},
			
	{"name": "maxGlobalRefinement", 
			"type": "integer", "value": "1",
			"description": "maximum number of global refinement."},
			
	{"name": "refineBoxes", 
			"type": "RefinementBox", 
			"dim": "*" ,
			"__dependencies": { "unit": "unit" },
			"description": "mesh faces."},

	{"name": "nBackgroundCells", 
			"type": "marmo:containers:Vector3D", "version": "1",
			"description": "number of background cells in each direction."}

	]
	
}
