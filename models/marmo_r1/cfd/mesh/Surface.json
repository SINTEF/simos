
{	
	"name": "Surface",
	"type": "Surface",
	"description": "Description of a surface (face) in CFD mesh.",
	
	"extends": ["marmo:basic:NamedEntityWithUnit"],
	
	"properties": [
			
	{"name": "nCells", 
			"type": "integer", "value": "1",
			"description": "number of surface cells."},


	{"name": "bc", 
			"type": "string", "value": "solid",
			"description": "boundary condition."},
			
	{"name": "index", 
			"type": "integer", "value": "0",
			"description": "surface index."},
						
	{"name": "criteriaFlags", 
			"type": "integer", "dim": "3",
			"description": "flags for criteria, [Distance, Curvature, Target cell sizes]"},

	{"name": "targetSizes", 
			"type": "marmo:containers:Dimensional3DVector", 
			"unit": "m",
			"__dependencies": { "unit": "unit" },
			"description": "target size criterias."},

	{"name": "refineLevel", 
			"type": "integer", "value": "0",
			"description": "refine level."},
			
	{"name": "trimming", 
			"type": "integer", "value": "0",
			"description": "1: trim the mesh, 0: don't trim the mesh."},
			
	{"name": "viscousLayer", 
				"type": "ViscousLayer",
				"optional": "true",
				"description": "Viscous layer parameters."}

	]
	
}
