
{	
	"name": "ShipSection",
	"type": "ShipSection",
	"description": "Ship section description.",

	"extends": ["marmo:basic:NamedEntity","FloatingVesselGeometry"],
	
	   "properties": [


		{"name": "loc", 
				"type": "marmo:containers:DimensionalScalar", 
				"unit": "m",
				"value": "0.0",
				"description": "section's location along the ship."},

		{"name": "pnts", 
			"type": "marmo:containers:NonEquallySpaced3DVectorSignal", 
			"description": "points' locations."},
						
    	{"name": "area", 
			"type": "marmo:containers:DimensionalScalar", 
			"unit": "m2",
			"value": "0.0",
			"description": "section area."},
			
       {"name": "bilgeKeelPort", 
	        "type": "marmo:vessels:parts:BilgeKeel", 
	        "optional": "true",
	        "description": "Port side bilge keel"},
        
       {"name": "bilgeKeelStar", 
            "type": "marmo:vessels:parts:BilgeKeel", 
            "optional": "true",
            "description": "Star-board side bilge keel"}
	]
	
}
