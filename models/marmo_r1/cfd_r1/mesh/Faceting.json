
{	
	"name": "Faceting",
	"version": "1",
	"type": "Faceting",
	"description": "Faceting setting for generating faces in CFD mesh.",
	
	"extends": ["marmo:basic:NamedEntityWithUnit"],
	
	"properties": [
			
	{"name": "minLen", 
			"type": "double", "value": "0.1",
			"description": "minimum length"},
			
	{"name": "maxLen", 
			"type": "double", "value": "1.0",
			"description": "maximum length"},
			
	{"name": "curveChordalTol", 
			"type": "double", "value": "0.75",
			"description": "curve chordal tolerance."},

	{"name": "surfacePlaneTol", 
			"type": "double", "value": "0.75",
			"description": "surface plane tolerance."},
			
	{"name": "curveResolution", 
			"type": "double", "value": "20.0",
			"description": "curve resolution."},

	{"name": "surfaceResolution", 
			"type": "double", "value": "20.0",
			"description": "surface resolution."}			
	]
	
}
